@model ASPNetSocialMedia.Models.UserFeedback

@{
    ViewData["Title"] = "Contact Socus";
}

<style>
    .contact-image {
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        width: 100%;
        height: 100%;
    }
</style>


<div class="container-fluid px-5 my-5">
    <div class="row justify-content-center ">
        <div class="col-xl-10">
            <div class="card border-1 rounded-3 shadow-lg overflow-hidden">
                <div class="card-body p-0">
                    <div class="row g-0">
                        <div class="col-sm-6 d-none d-sm-block"><img src="~/images/contact-us.jpg" class="contact-image" /></div>
                        <div class="col-sm-6 p-4">
                            <div class="text-center">
                                <div class="h3 fw-light">Contact Form</div>
                                <p class="mb-4 text-muted">Send us your thoughts and prayers!</p>
                            </div>

                            <form asp-controller="UserFeedback" asp-action="Create">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="form-floating mb-3">
                                    <label asp-for="FeedbackName" class="control-label"> Name </label>
                                    <input asp-for="FeedbackName" class="form-control" id="name" type="text" placeholder="Name" />
                                    <span asp-validation-for="FeedbackName" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <label asp-for="FeedbackEmail" class="control-label"> Email </label>
                                    <input asp-for="FeedbackEmail" class="form-control" id="name" type="text" placeholder="Email" />
                                    <span asp-validation-for="FeedbackEmail" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <label asp-for="FeedbackMessage" class="control-label"> Message </label>
                                    <input asp-for="FeedbackMessage" class="form-control" id="name" type="text" placeholder="Message" style="height: 10rem;" />
                                    <span asp-validation-for="FeedbackMessage" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <input type="submit" value="Create" class="btn btn-primary" />
                                </div>
                            </form>

                        </div>
                    </div>

                    <div class="row mt-5">
                        <section class="text-center">
                            <div class="row">
                                <div class="col-lg-4 col-md-4 mb-5 mb-md-5 mb-lg-0 position-relative">
                                    <h3 class="fw-light mb-3"> Address </h3>
                                    <h6 class="fw-normal mb-0">
                                        Headquarters in<br />
                                        Montreal, Quebec, Canada
                                    </h6>
                                    <div class="vr vr-blurry position-absolute my-0 h-100 d-none d-md-block top-0 end-0"></div>
                                </div>

                                <div class="col-lg-4 col-md-4 mb-5 mb-md-5 mb-lg-0 position-relative">
                                    <h3 class="fw-light mb-3"> Phone </h3>
                                    <h6 class="fw-normal mb-0" >
                                        678 999 8212
                                        </h6>
                                    <div class="vr vr-blurry position-absolute my-0 h-100 d-none d-md-block top-0 end-0"></div>
                                </div>

                                <div class="col-lg-4 col-md-4 mb-5 mb-md-0 position-relative">
                                    <h3 class="fw-light mb-3">Email</h3>
                                    <h6 class="fw-normal mb-0">DreamsDoComeTrue@Socus.inc</h6>
                                </div>

                            </div>
                            <br />
                        </section>
                        

                </div>
            </div>
        </div>
    </div>
</div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
