@model ASPNetSocialMedia.Models.Messages

@{
    ViewData["Title"] = "Delete";
}
<h3>Are you sure you want to delete this message?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Message: 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MessageContent)
        </dd>
        <dt hidden class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserEmail)
        </dt>
        <dd hidden class = "col-sm-10">
            @Html.DisplayFor(model => model.UserEmail)
        </dd>
        <dt class = "col-sm-2">
            From: 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FriendEmail)
        </dd>
        <dt class = "col-sm-2">
            At: 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreationDate)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="MessageId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to message box</a>
    </form>
</div>
