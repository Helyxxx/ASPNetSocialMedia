@model ASPNetSocialMedia.Models.Messages

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Messages</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MessageContent" class="control-label"></label>
                <input asp-for="MessageContent" class="form-control" />
                <span asp-validation-for="MessageContent" class="text-danger"></span>
            </div>
            <div hidden class="form-group">
                <label asp-for="WhoPosted" class="control-label"></label>
                <input asp-for="WhoPosted" value="@User.Identity.Name" class="form-control" />
                <span asp-validation-for="WhoPosted" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WhoReceived" class="control-label"></label>
                <input asp-for="WhoReceived" class="form-control" />
                <span asp-validation-for="WhoReceived" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
