@model IEnumerable<ASPNetSocialMedia.Models.Messages>

@{
    ViewData["Title"] = "Index";
}

<h1>SentMessages</h1>
<a asp-action="Index">Back to Inbox</a>

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by email: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Search" class="btn btn-default" /> |
            <a asp-action="SentMessages">Back to Full List</a>
        </p>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="SentMessages" asp-route-sortOrder="@ViewData["NameSortParm"]">To</a>
            </th>
            <th>
                <a>Message Content</a>
            </th>
            <th>
                <a asp-action="SentMessages" asp-route-sortOrder="@ViewData["DateSortParm"]">Date</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>

                <td hidden>
                @Html.DisplayFor(modelItem => item.UserEmail)
            </td>
                <td >
                @Html.DisplayFor(modelItem => item.FriendEmail)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MessageContent)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreationDate)
            </td>
        </tr>
}
