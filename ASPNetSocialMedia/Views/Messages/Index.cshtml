@model IEnumerable<ASPNetSocialMedia.Models.Messages>

@{
    ViewData["Title"] = "Index";
}

<h1>Inbox</h1>

<p>
    <button type="button" class="btn btn-info"><a asp-action="Create">Send a new message</a></button>
</p>


@foreach (var item in Model){
    <div class="alert alert-info" role="alert">
        <h4 class="alert-heading">Sent to : @Html.DisplayFor(modelItem => item.FriendEmail)</h4>
        <p>Date: @Html.DisplayFor(modelItem => item.CreationDate)</p>
        <hr>
        <p class="mb-0">@Html.DisplayFor(modelItem => item.MessageContent)</p>
    </div>
}
