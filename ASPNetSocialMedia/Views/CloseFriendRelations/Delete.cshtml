@model ASPNetSocialMedia.Models.CloseFriendRelation

@{
    ViewData["Title"] = "Delete";
}
<h3>Are you sure you want to delete your close friend? :'(</h3>
<div>
    <h4>CloseFriendRelation</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CloseFriendName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CloseFriendName)
        </dd>
        <dt hidden class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CloseUserEmail)
        </dt>
        <dd hidden class = "col-sm-10">
            @Html.DisplayFor(model => model.CloseUserEmail)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CloseFriendEmail)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CloseFriendEmail)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CloseFriendRelationId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
