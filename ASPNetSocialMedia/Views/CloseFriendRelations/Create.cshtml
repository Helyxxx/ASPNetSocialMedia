@model ASPNetSocialMedia.Models.CloseFriendRelation

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>CloseFriendRelation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div hidden class="form-group">
                <label asp-for="CloseUserEmail" class="control-label"></label>
                <input asp-for="CloseUserEmail" value="@User.Identity.Name class=" form-control" />
                <span asp-validation-for="CloseUserEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CloseFriendEmail" class="control-label"></label>
                <input asp-for="CloseFriendEmail" class="form-control" />
                <span asp-validation-for="CloseFriendEmail" class="text-danger"></span>
            </div>
            <div>
                @if (ViewData["Success"] != null)
                {
                    <div id="successMessage">
                        @ViewData["Success"]
                    </div>
                }
            </div>
