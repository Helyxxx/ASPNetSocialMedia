@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ASPNetSocialMedia</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ASPNetSocialMedia.styles.css" asp-append-version="true" />
    <link rel="icon" type="image/x-icon" href="https://i.ibb.co/W0L3g2y/logo.png">
    <!--Google Fonts-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">

    <style>
        .card {
          box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
          transition: 0.3s;
          width: 100%;
        }

        .card:hover {
          box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
        }

        .container {
          padding: 16px;
        }
    </style>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3" style="margin:0px !important; ">
            <div class="container-fluid">
                <a asp-area="" asp-controller="Home" asp-action="Index"><img src="https://i.ibb.co/W0L3g2y/logo.png" alt="logo" width="50" height="50"></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex">
                    <ul class="navbar-nav flex-grow-1">
                        <!--<li class="nav-item">
                            <a class="nav-link text-dark">
                                <input type="search" class="form-control" placeholder="Search" />
                            </a>
                        </li>
                        <li class="nav-item">
                            <img src="https://i.ibb.co/4Vg3Qh0/search.png" alt="search" height="35" style="padding-top:18px">
                        </li>-->
                        <a class="nav-link text-dark" asp-controller="Home" asp-action="About">About us</a>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid" id="main">
        <main role="main" class="pb-3">
            @if (SignInManager.IsSignedIn(User))
            {
                <div class="sidebar">

                    <!--Profile Picture / Name / Bio-->
                    <div id="tab">
                        <div class="card">
                            <img src="@UserManager.GetUserAsync(User).Result.ProfileImage" alt="Avatar" style="width:100%">
                            <div class="container">
                                <h4><a href="/"><b>@UserManager.GetUserAsync(User).Result.FirstName @UserManager.GetUserAsync(User).Result.LastName</b></a></h4>
                                <p><i>@UserManager.GetUserAsync(User).Result.Biography</i></p>
                            </div>
                        </div>
                    </div>

                    <!--Friend List-->
                    <div id="tab">
                        <img src="https://i.ibb.co/wN6gKKK/posts.png" alt="posts" width="30">
                        <a href="/FriendRelations">My Friends</a>
                    </div>

                    <!--Close Friend List-->
                    <div id="tab">
                        <img src="https://i.ibb.co/wN6gKKK/posts.png" alt="posts" width="30">
                        <a href="/CloseFriendRelations">Close Friends</a>
                    </div>

                    <!--Messages-->
                    <div id="tab">
                        <img src="https://i.ibb.co/wN6gKKK/posts.png" alt="posts" width="30">
                        <a href="/Messages">Messages</a>
                    </div>


                    <!--Posts-->
                    <div id="tab">
                        <img src="https://i.ibb.co/wN6gKKK/posts.png" alt="posts" width="30">
                        <a href="/Posts">My Posts</a>
                    </div>

                    <!--Find Friends-->
                    <div id="tab">
                        <img src="https://i.ibb.co/P9WtZBV/friends.png" alt="friends" width="30">
                        <a href="/ApplicationUser">Find Friends</a>
                    </div>

                    <!--Public Chat-->
                    <div id="tab">
                        <img src="https://i.ibb.co/F4h7MLc/chat.png" alt="chat" width="30">
                        <a href="/Home/Chat">Public Chat</a>
                    </div>

                    <!--Profile-->
                    <div id="tab">
                        <img src="https://i.ibb.co/LSXHV7D/profile.png" alt="profile" width="30">
                        <a href="/Home/CompleteProfile">Edit Profile</a>
                    </div>

                    <!--Weather-->
                    <div id="tab">
                        <img src="" alt="weather" width="30">
                        <a href="/Home/Weather">Weather</a>
                    </div>

                    <!--Logout-->
                    <div id="tab">
                        <img src="https://i.ibb.co/DzRh382/logout.png" alt="logout" width="30">
                        <a href="/Identity/Account/Logout?returnUrl=%2F">Logout</a>
                    </div>



                </div>
            }

            @RenderBody()
        </main>
    </div>

    <footer class="bg-light text-center text-lg-start" id="footer">
        <span >
        <div class="text-center p-3">
            Â© 2022 Social Media
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
