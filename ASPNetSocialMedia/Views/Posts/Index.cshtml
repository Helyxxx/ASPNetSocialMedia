@model IEnumerable<ASPNetSocialMedia.Models.Post>

@{
    ViewData["Title"] = "Manage Your Posts";
}

<h1>@ViewData["Title"]</h1>

@foreach (var item in Model)
{
    <div class="container">
        <div class="card" style="margin:10px">
            <div class="card-body">
                <p class="card-text">@Html.DisplayFor(modelItem => item.PostContent)</p>
                <button type="button" class="btn btn-info"><a asp-action="Edit" asp-route-id="@item.PostId">Edit</a></button>
                <button type="button" class="btn btn-warning"><a asp-action="Delete" asp-route-id="@item.PostId">Delete</a></button> 
            </div>
        </div>
    </div>
    
}
