@model IEnumerable<ASPNetSocialMedia.Models.PrivateMessage>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PrivateMessageContent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WhoPosted)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PrivateMessageContent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WhoPosted)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PrivateMessageId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PrivateMessageId">Details</a> |
